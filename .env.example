# Database Configuration
DATABASE_URL=sqlite:///lexlang.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lexlang
DATABASE_USER=lexlang_user
DATABASE_PASSWORD=your_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-secret-key-here
DEBUG=False

# Model Configuration
MODEL_PATH=./models/
EMBEDDING_MODEL_PATH=./models/embeddings/
POS_MODEL_PATH=./models/pos/
DIALECT_MODEL_PATH=./models/classifiers/

# Data Configuration
DATA_PATH=./data/
CORPUS_PATH=./data/corpora/
LEXICON_PATH=./data/lexicons/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/lexlang.log

# External APIs
TRANSLATOR_API_KEY=your_translator_api_key
SPEECH_API_KEY=your_speech_api_key

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Feature Flags
ENABLE_CACHING=True
ENABLE_METRICS=True
ENABLE_DIALECT_DETECTION=True
ENABLE_TONAL_PROCESSING=True
